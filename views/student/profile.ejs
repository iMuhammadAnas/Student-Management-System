<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Student Profile</title>
    <style>
      body {
        font-family: "Segoe UI", sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f0f2f5;
      }

      .container {
        max-width: 800px;
        margin: 40px auto;
        background: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
      }

      h1 {
        text-align: center;
        color: #2c3e50;
      }

      .info {
        margin-bottom: 30px;
      }

      .info p {
        font-size: 16px;
        margin: 8px 0;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 15px;
      }

      table,
      th,
      td {
        border: 1px solid #ccc;
      }

      th,
      td {
        padding: 12px;
        text-align: center;
      }

      th {
        background-color: #3498db;
        color: white;
      }

      .back {
        display: block;
        margin-top: 20px;
        text-align: center;
      }

      .back a {
        text-decoration: none;
        color: white;
        background: #3498db;
        padding: 10px 20px;
        border-radius: 5px;
      }

      .back a:hover {
        background: #2980b9;
      }

      @media (max-width: 600px) {
        .container {
          margin: 20px;
          padding: 20px;
        }

        th,
        td {
          font-size: 14px;
        }
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>Student Profile</h1>

      <div class="info">
        <p><strong>Full Name:</strong> <%= student.fullname %></p>
        <p><strong>Username:</strong> <%= student.username %></p>
        <p><strong>Email:</strong> <%= student.email %></p>
        <p><strong>Course:</strong> <%= student.course %></p>
        <p><strong>Absences:</strong> <%= student.absences || 0 %></p>
      </div>

      <h2>Test Results</h2>
      <% if (student.tests && student.tests.length > 0) { %>
      <table>
        <thead>
          <tr>
            <th>Test Name</th>
            <th>Marks</th>
          </tr>
        </thead>
        <tbody>
          <% student.tests.forEach(test => { %>
          <tr>
            <td><%= test.name %></td>
            <td><%= test.marks %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <% } else { %>
      <p>No tests available.</p>
      <% } %>

      <div class="back">
        <a href="/logout">Logout</a>
      </div>
    </div>
  </body>
</html>
