<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Admin Dashboard</title>
    <style>

      .container {
        width: 80%;
        margin: 40px auto;
        background: #ffffff;
        padding: 40px;
        border-radius: 10px;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
      }

      h1 {
        text-align: center;
        color: #2c3e50;
        margin-bottom: 30px;
      }

      form {
        display: flex;
        flex-direction: column;
        gap: 18px;
      }

      label {
        font-weight: 600;
        margin-bottom: 5px;
        display: block;
      }

      input,
      select {
        width: 100%;
        padding: 12px;
        border-radius: 6px;
        border: 1px solid #ccc;
        font-size: 15px;
        box-sizing: border-box;
      }

      button {
        background: #2ecc71;
        color: white;
        border: none;
        padding: 14px;
        font-size: 16px;
        border-radius: 6px;
        cursor: pointer;
        transition: background 0.2s;
      }

      button:hover {
        background: #27ae60;
      }

      .back-link {
        text-align: center;
        margin-top: 20px;
      }

      .back-link a {
        text-decoration: none;
        color: #3498db;
        font-weight: 600;
      }

      .error {
        color: red;
        text-align: center;
        font-size: 14px;
      }

      @media (max-width: 600px) {
        .container {
          margin: 20px;
          padding: 25px;
        }

        h1 {
          font-size: 22px;
        }
      }
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: "Segoe UI", sans-serif;
        background-color: #ecf0f1;
        display: flex;
        min-height: 100vh;
      }

      .sidebar {
        width: 220px;
        background-color: #2c3e50;
        color: white;
        padding: 20px;
        /* position: fixed; */
        height: 100vh;
      }

      .sidebar h2 {
        margin-bottom: 20px;
        text-align: center;
        color: #1abc9c;
      }

      .sidebar a {
        display: block;
        padding: 10px;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        margin: 10px 0;
      }

      .sidebar a:hover {
        background-color: #34495e;
      }

      .main {
        margin-left: 220px;
        flex: 1;
        padding: 30px;
      }

      .top-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: white;
        padding: 15px 20px;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        margin-bottom: 30px;
      }

      .top-bar .welcome {
        font-size: 18px;
        color: #2c3e50;
      }

      .top-bar a {
        background-color: #1abc9c;
        color: white;
        text-decoration: none;
        padding: 10px 16px;
        border-radius: 5px;
        font-weight: bold;
      }

      .tabs {
        margin-bottom: 20px;
      }

      .tabs a {
        display: inline-block;
        margin: 5px 5px 10px 0;
        padding: 8px 14px;
        background-color: #2980b9;
        color: white;
        border-radius: 4px;
        text-decoration: none;
        font-size: 14px;
      }

      .tabs a:hover {
        background-color: #2471a3;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        background-color: white;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
      }

      th,
      td {
        padding: 14px;
        text-align: left;
        border-bottom: 1px solid #ddd;
      }

      th {
        background-color: #3498db;
        color: white;
      }

      tr:hover {
        background-color: #f9f9f9;
      }

      .action-link {
        padding: 6px 12px;
        background-color: #34495e;
        color: white;
        text-decoration: none;
        border-radius: 4px;
      }

      .logout-link {
        margin-top: 30px;
        display: inline-block;
        background-color: #e74c3c;
        padding: 10px 20px;
        color: white;
        text-decoration: none;
        border-radius: 5px;
      }

      @media (max-width: 768px) {
        .sidebar {
          display: none;
        }

        .main {
          margin-left: 0;
          padding: 20px;
        }

        .top-bar {
          flex-direction: column;
          align-items: flex-start;
          gap: 10px;
        }
      }
    </style>
  </head>
  <body>
    <!-- Sidebar -->
    <div class="sidebar">
      <h2>Admin Panel</h2>
      <a href="/admin/dashboard">üè† Dashboard</a>
      <a href="/admin/add-student">‚ûï Add Student</a>
      <a href="/logout">üö™ Logout</a>
    </div>

    <!-- Main Content -->
    <div class="container">
      <h1>Add New Student</h1>

      <% if (error) { %>
      <div class="error"><%= error %></div>
      <% } %>

      <form method="POST" action="/admin/add-student">
        <div>
          <label>Full Name</label>
          <input type="text" name="fullname" required />
        </div>

        <div>
          <label>Username</label>
          <input type="text" name="username" required />
        </div>

        <div>
          <label>Email</label>
          <input type="email" name="email" required />
        </div>

        <div>
          <label>Password</label>
          <input type="password" name="password" required />
        </div>

        <div>
          <label>Course</label>
          <select name="course" required>
            <option value="" disabled selected>-- Select Course --</option>
            <% courses.forEach(course => { %>
            <option value="<%= course %>"><%= course %></option>
            <% }) %>
          </select>
        </div>

        <button type="submit">Create Student</button>
      </form>

      <div class="back-link">
        <a href="/admin/dashboard">‚Üê Back to Dashboard</a>
      </div>
    </div>
  </body>
</html>
