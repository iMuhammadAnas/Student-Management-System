<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Dashboard</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Segoe UI', sans-serif;
      background-color: #ecf0f1;
      display: flex;
      min-height: 100vh;
    }

    .sidebar {
      width: 220px;
      background-color: #2c3e50;
      color: white;
      padding: 20px;
      position: fixed;
      height: 100%;
    }

    .sidebar h2 {
      margin-bottom: 20px;
      text-align: center;
      color: #1abc9c;
    }

    .sidebar a {
      display: block;
      padding: 10px;
      color: white;
      text-decoration: none;
      border-radius: 5px;
      margin: 10px 0;
    }

    .sidebar a:hover {
      background-color: #34495e;
    }

    .main {
      margin-left: 220px;
      flex: 1;
      padding: 30px;
    }

    .top-bar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      background-color: white;
      padding: 15px 20px;
      border-radius: 8px;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
      margin-bottom: 20px;
    }

    .top-bar .welcome {
      font-size: 18px;
      color: #2c3e50;
    }

    .top-bar a {
      background-color: #1abc9c;
      color: white;
      text-decoration: none;
      padding: 10px 16px;
      border-radius: 5px;
      font-weight: bold;
    }

    .stats {
      background-color: #ffffff;
      padding: 15px 20px;
      border-radius: 8px;
      box-shadow: 0 2px 5px rgba(0,0,0,0.05);
      margin-bottom: 25px;
      display: flex;
      gap: 20px;
      align-items: center;
      font-size: 16px;
    }

    .stats span {
      color: #2c3e50;
      font-weight: bold;
    }

    .tabs {
      margin-bottom: 20px;
    }

    .tabs a {
      display: inline-block;
      margin: 5px 5px 10px 0;
      padding: 8px 14px;
      background-color: #2980b9;
      color: white;
      border-radius: 4px;
      text-decoration: none;
      font-size: 14px;
    }

    .tabs a:hover {
      background-color: #2471a3;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      background-color: white;
      border-radius: 8px;
      overflow: hidden;
      box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    }

    th, td {
      padding: 14px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }

    th {
      background-color: #3498db;
      color: white;
    }

    tr:hover {
      background-color: #f9f9f9;
    }

    .action-link {
      padding: 6px 12px;
      background-color: #34495e;
      color: white;
      text-decoration: none;
      border-radius: 4px;
    }

    .logout-link {
      margin-top: 30px;
      display: inline-block;
      background-color: #e74c3c;
      padding: 10px 20px;
      color: white;
      text-decoration: none;
      border-radius: 5px;
    }

    @media (max-width: 768px) {
      .sidebar {
        display: none;
      }

      .main {
        margin-left: 0;
        padding: 20px;
      }

      .top-bar {
        flex-direction: column;
        align-items: flex-start;
        gap: 10px;
      }
    }
  </style>
</head>
<body>

  <!-- Sidebar -->
  <div class="sidebar">
    <h2>Admin Panel</h2>
    <a href="/admin/dashboard">üè† Dashboard</a>
    <a href="/admin/add-student">‚ûï Add Student</a>
    <a href="/logout">üö™ Logout</a>
  </div>

  <!-- Main Content -->
  <div class="main">
    <div class="top-bar">
      <div class="welcome">Welcome, <%= admin.fullname %></div>
      <a href="/admin/add-student">+ Add New Student</a>
    </div>

    <!-- Total Student Count -->
    <div class="stats">
      üìä Total Students: <span><%= totalStudents %></span>
    </div>

    <!-- Course Tabs -->
    <div class="tabs">
      <% courses.forEach(course => { %>
        <a href="/admin/courses/<%= course %>"><%= course %></a>
      <% }) %>
    </div>

    <!-- Student Table -->
    <table>
      <thead>
        <tr>
          <th>Full Name</th>
          <th>Username</th>
          <th>Email</th>
          <th>Course</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% students.forEach(student => { %>
          <tr>
            <td><%= student.fullname %></td>
            <td><%= student.username %></td>
            <td><%= student.email %></td>
            <td><%= student.course %></td>
            <td>
              <a href="/admin/students/<%= student.id %>" class="action-link">View / Edit</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

</body>
</html>
